{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "Using": [ "Serilog.Sinks.Console", "Serilog.Enrichers.ClientInfo", "Serilog.Sinks.File" ],
    "Enrich": [ "WithClientIp" ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "log/log.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3} {ClientIp}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "ApiKey": "Secret",
  "ConnectionStrings": {
    "JobDatabase": "Server=(localdb)\\mssqllocaldb;Database=JobDatabase;Trusted_Connection=True;MultipleActiveResultSets=true"
  }
}
