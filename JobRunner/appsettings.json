{
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Using": [
      "Serilog.Enrichers.ClientInfo",
      "Serilog.Sinks.File"
    ],
    "Enrich": [
      "WithClientIp"
    ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "log/log.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3} {ClientIp}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "ApiKey": "Secret",
  "ConnectionStrings": {
    "JobDatabase": "Server=(localdb)\\mssqllocaldb;Database=JobDatabase;Trusted_Connection=True;MultipleActiveResultSets=true"
  }
}